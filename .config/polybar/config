[module/spotify-play-pause]
type = custom/ipc
hook-0 = echo "懶"
hook-1 = echo "懶"
initial = 1
click-left = playerctl play-pause spotify

[module/spotify-next]
type = custom/script
exec = echo "怜"
format = <label>
